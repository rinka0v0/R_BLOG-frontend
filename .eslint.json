{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
    "import",
    "react",
    "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals":   {},
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "trailingComma": "es6"
            }
          ]
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}